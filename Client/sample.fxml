<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<?scenebuilder-stylesheet /NetChat.css/Style.NetChat.css?>
<?import java.net.URL?>

<VBox fx:controller="NetChat.Client.Controller" xmlns:fx="http://javafx.com/fxml" alignment="center">
    <stylesheets><URL value="@/NetChat/Client/css/Style.css"/></stylesheets>
    <TextArea fx:id="textArea" editable="false" VBox.vgrow="ALWAYS"/>
    <HBox>
        <TextField fx:id="textField" HBox.hgrow="ALWAYS" promptText="Введите сообщение"/>
        <Button fx:id="btn1" text="Send" onAction="#sendMsg"/>
    </HBox>
</VBox>